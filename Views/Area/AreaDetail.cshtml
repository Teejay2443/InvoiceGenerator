@using InvoiceGenerator.Dto;
@using InvoiceGenerator.Dto;
@model AreaCoveredDto;
@{
    ViewData["Title"] = "Area Detail";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <p class="card-text">Service Area : @Model.Name</p>


            <a asp-controller="Area" asp-action="UpdateArea"
               asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-controller="Area" asp-action="Areas" class="btn btn-danger">Back To Home</a>

        </div>
    </div>
</div>

