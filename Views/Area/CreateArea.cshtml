@{
    ViewData["Title"] = "Create Area";
}

<div class="col-md-8">
    <form asp-controller="Area" asp-action="CreateArea">
        <div class="mb-3">
            <label class="form-label">Service Area Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Name" required>

            <div class="row">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
    </form>
</div>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm">Back To Home </a>
