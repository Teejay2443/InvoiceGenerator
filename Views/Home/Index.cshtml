@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fooju's Invoice Generator</title>
    <style>
        /* Base styles */
        body {
            margin: 0;
            font-family: system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            background: linear-gradient(to bottom right, #eff6ff, #eef2ff);
        }

        /* Header */
        header {
            background: white;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
            
        }

        .header-content {
            max-width: 80rem;
            margin: 0 auto;
            padding: 1.5rem 1rem;
            display: flex;
            align-items: center;
            
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .logo {
            width: 2rem;
            height: 2rem;
            color: #4f46e5;
        }

        .app-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #111827;
            margin: 0;
        }

        /* Main content */
        main {
            max-width: 80rem;
            margin: 0 auto;
            padding: 4rem 1rem;
        }

        .hero {
            text-align: center;
            margin-bottom: 4rem;
        }

            .hero h2 {
                font-size: 3.75rem;
                font-weight: 800;
                color: #111827;
                margin: 0;
                line-height: 1.2;
            }

                .hero h2 span {
                    display: block;
                    color: #4f46e5;
                }

            .hero p {
                max-width: 48rem;
                margin: 1.25rem auto;
                font-size: 1.25rem;
                color: #6b7280;
            }

        /* Feature cards */
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 4rem 0;
        }

        .feature-card {
            background: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transition: transform 0.5s;
        }

            .feature-card:hover {
                transform: scale(1.05);
            }

        .icon-container {
            width: 3rem;
            height: 3rem;
            background: #eef2ff;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

            .icon-container svg {
                width: 1.5rem;
                height: 1.5rem;
                color: #4f46e5;
            }

        .feature-card h3 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #111827;
            margin: 0 0 0.5rem 0;
        }

        .feature-card p {
            color: #6b7280;
            margin: 0;
        }

        .feature-card button {
            display: inline-flex;
            align-items: center;
            color: #4f46e5;
            background: none;
            border: none;
            padding: 0;
            margin-top: 1rem;
            cursor: pointer;
            font-size: 0.875rem;
            font-weight: 500;
        }

            .feature-card button:hover {
                color: #4338ca;
            }

        /* CTA button */
        .cta {
            text-align: center;
            margin-top: 4rem;
        }

            .cta button {
                background: #4f46e5;
                color: white;
                border: none;
                padding: 0.75rem 1.5rem;
                border-radius: 0.375rem;
                font-size: 1rem;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
                cursor: pointer;
                transition: background-color 0.2s;
            }

                .cta button:hover {
                    background: #4338ca;
                }

                .cta button svg {
                    margin-left: 0.5rem;
                    width: 1.25rem;
                    height: 1.25rem;
                }

        /* Footer */
        footer {
            background: white;
            margin-top: 4rem;
            padding: 1.5rem 1rem;
            text-align: center;
        }

            footer p {
                color: #6b7280;
                font-size: 0.875rem;
                margin: 0;
            }

       

        {
            font-size: 2.5rem;
        }

        .hero p {
            font-size: 1.125rem;
        }

        .features {
            grid-template-columns: 1fr;
        }

        .green-button {
            background-color: green; /* Always green */
            color: white; /* Text color */
            border: none; /* No border */
            padding: 10px 20px; /* Padding for the button */
            border-radius: 5px; /* Rounded corners */
            cursor: pointer; /* Pointer on hover */
        }

            .green-button a {
                text-decoration: none; /* Removes underline */
                color: white; /* Link text color */
            }

    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-content">
            <div class="logo-container">
                <svg class="logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <polyline points="14 2 14 8 20 8" />
                    <line x1="16" y1="13" x2="8" y2="13" />
                    <line x1="16" y1="17" x2="8" y2="17" />
                    <polyline points="10 9 9 9 8 9" />
                </svg>
                <h1 class="app-name">Fooju's Invoice Generator</h1>
            </div>
        </div>
    </header>

    <!-- Main content -->
    <main>
        <div class="hero">
            <h2>Professional Invoice Generation<span>Made Simple</span></h2>
            <p>Streamline your billing process with our comprehensive invoice management system. Create, manage, and track invoices effortlessly.</p>
        </div>

        <div class="features">
            <!-- Service Management -->
            <div class="feature-card">
                <div class="icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="3" />
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z" />
                    </svg>
                </div>
                <h3>Service Management</h3>
                <p>Define and manage your services with detailed pricing, taxes, and discounts.</p>
                <button class=" btn btn-primary"> <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Services">Click here to create Services</a></button>
            </div>

            <!-- Area Coverage -->
            <div class="feature-card">
                <div class="icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                        <circle cx="12" cy="10" r="3" />
                    </svg>
                </div>
                <h3>Area Coverage</h3>
                <p>Specify and manage your service areas with custom pricing for each region.</p>
                <button class=" btn btn-primary"> <a class="nav-link text-dark" asp-area="" asp-controller="Area" asp-action="Areas">Click here to Create Service Areas</a></button>
            </div>

            <!-- Invoice Generation -->
            <div class="feature-card">
                <div class="icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                        <polyline points="14 2 14 8 20 8" />
                        <line x1="16" y1="13" x2="8" y2="13" />
                        <line x1="16" y1="17" x2="8" y2="17" />
                        <polyline points="10 9 9 9 8 9" />
                    </svg>
                </div>
                <h3>Invoice Generation</h3>
                <p>Create professional invoices with automatic calculations and beautiful templates.</p>
                <button class=" btn btn-primary"> <a class="nav-link text-dark" asp-area="" asp-controller="Invoice" asp-action="Invoices">Click here to Create to Check Invoices</a></button>
            </div>
        </div>

        <div class="cta">
            <button>
                Get Started
                <a class="nav-link text-dark" asp-area="" asp-controller="Invoice" asp-action="Invoices"></a>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                </svg>
            </button>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <p>© 2024 InvoiceGen Pro. All rights reserved.</p>
    </footer>
</body>
</html>
