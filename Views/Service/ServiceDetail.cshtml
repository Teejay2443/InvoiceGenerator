@using InvoiceGenerator.Dto;
@using InvoiceGenerator.Dto;
@model ServiceRenderDto;
@{
    ViewData["Title"] = "Service Detail";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <p class="card-text">Service Name: @Model.Name</p>


            <a asp-controller="Service" asp-action="UpdateService"
               asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-controller="Service" asp-action="Services" class="btn btn-danger">Back To Home</a>

        </div>
    </div>
</div>

